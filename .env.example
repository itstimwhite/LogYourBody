# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database
POSTGRES_DATABASE=postgres

# Optional: RevenueCat (for subscriptions)
NEXT_PUBLIC_REVENUECAT_PUBLIC_KEY=your-revenuecat-key

# Optional: Version (auto-populated in CI)
NEXT_PUBLIC_VERSION=local-dev

# OpenAI API Configuration (for avatar generation)
# NEVER commit your actual API key to version control
OPENAI_API_KEY=your-openai-api-key-here

# Twilio Configuration (for SMS login)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890