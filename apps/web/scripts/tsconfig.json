{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}